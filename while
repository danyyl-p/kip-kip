#include <iostream>
#include <string>
using namespace std;

int main()
{
    int int1 = 15;
    int int2 = 20;
    int int3 = 15;
    int int4 = 20;

    int i = 0;

    while (true)
    {
        i++;
        cout << "Iteration: " << i << endl;

        while (int2 > int1 && int3 < int4)
        {
            int1++;
            int3++;
            cout << "int1 and int3" << endl;
            cout << "int1 = " << int1 << " int3 = " << int3 << endl;
        }

        if (int1 == int3)
        {
            cout << "int1 == int3 is true" << endl;
        }

        if (int1 != int2)
        {
            cout << "int1 != int2 is true" << endl;
        }

        if (int1 == int3 && int2 == int4)
        {
            cout << "int1 == int3 && int2 == int4 is true" << endl;
        }

        if ((int2 > int1 && int3 < int4) &&
            (int1 == int3) &&
            (int1 != int2) &&
            (int1 == int3 && int2 == int4))
        {
            break;
        }
    }

    return 0;
}
